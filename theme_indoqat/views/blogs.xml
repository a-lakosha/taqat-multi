<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Hero / top section override -->
    <template id="opt_blog_post_ta" inherit_id="website_blog.blog_post_short">
        <xpath expr="//div[@id='o_wblog_blog_top']" position="replace">
            <section class="post_blogs">
                <div class="container pt144 pb64 border-bottom">
                    <div class="row d-flex flex-row align-items-end justify-content-between gap-2 gap-lg-0">
                        <div class="content col-lg-6 o_animate o_anim_fade_in">
                            <h2 class="display-2 fw-bolder pb-3">Blog &amp; News</h2>
                            <p class="display-6 fw-medium">
                                Explore the latest in sustainable development, technology, and social innovation.
                                <br/>
                                <br/>
                                Discover inspiring success stories, Indoqat highlights, and expert-driven analysis on
                                key global trends shaping today and tomorrow.
                            </p>
                        </div>
                        <div class="col-lg-4 o_animate o_anim_fade_in">
                            <t t-call="website.website_search_box_input">
                                <t t-set="_form_classes"
                                   t-valuef="#{not len(blogs) &gt; 1 and 'ms-auto'} flex-grow-1 flex-lg-grow-0"/>
                                <t t-set="_classes" t-valuef=""/>
                                <t t-set="search_type" t-valuef="blogs"/>
                                <t t-set="action" t-value="blog_url(tag=tag,search=search)"/>
                                <t t-set="display_description" t-valuef="true"/>
                                <t t-set="display_detail" t-valuef="false"/>
                                <input type="hidden" name="tag" t-att-value="tag"/>
                                <input type="hidden" name="date_begin" t-att-value="date_begin"/>
                                <input type="hidden" name="date_end" t-att-value="date_end"/>
                            </t>
                        </div>
                    </div>
                </div>
            </section>
        </xpath>
    </template>
    <!--    Search Form override-->
    <template id="custom_search_input" inherit_id="website.website_search_box_input">
        <xpath expr="//input" position="attributes">
            <attribute name="t-attf-class"
                       add="bg-transparent"
                       remove=""
                       separator=" "/>
            <attribute name="placeholder">Text here</attribute>
        </xpath>
        <xpath expr="//button" position="attributes">
            <attribute name="t-attf-class"
                       add="bg-transparent"
                       remove=""
                       separator=" "/>
        </xpath>
        <xpath expr="//div" position="attributes">
            <attribute name="t-attf-class"
                       add="border flex-row-reverse gap-2 py16 px-3 rounded-3 align-items-start justify-content-end"
                       remove=""
                       separator=" "/>
        </xpath>
    </template>
    <!--    Navbar Override-->
    <template id="custom_inherit_listing_layout_switcher" inherit_id="website_blog.blogs_nav">
        <xpath expr="//nav[contains(@t-attf-class, 'navbar navbar-expand-lg navbar-light pt-4 pb-0 px-0')]"
               position="replace">
            <t t-set="latest_posts"
               t-value="request.env['blog.post'].search([('is_published', '=', True)], order='create_date desc', limit=4)"/>
            <t t-set="first_latest_post" t-value="latest_posts[0] if latest_posts else False"/>
            <t t-set="last_three_posts" t-value="latest_posts[1:] if latest_posts else []"/>
            <!-- Featured post section -->
            <!--            <section class="latest_post" t-if="latest_post">-->
            <section class="lastest_news pb144" t-if="latest_posts">
                <div class="container pt64">
                    <h2 class="pb64">Latest News</h2>
                    <div class="row first_lastest_blog  gap-4 gap-lg-0 o_animate o_anim_fade_in">
                        <a t-attf-href="/blog/#{slug(first_latest_post.blog_id)}/#{slug(first_latest_post)}"
                           class="text-black first_lastest_blog_img col-lg-7">
                            <t t-call="website.record_cover">
                                <t t-set="_record" t-value="first_latest_post"/>
                                <t
                                        t-set="additional_classes"
                                        t-valuef="o_not_editable h174 rounded-4"
                                />
                            </t>
                        </a>
                        <div class="col d-flex flex-column justify-content-between o_animate o_anim_slide_in  o_anim_from_right">
                            <div class="">
                                <a t-attf-href="/blog/#{slug(first_latest_post.blog_id)}/#{slug(first_latest_post)}"
                                   class="text-black d-flex display-4 fw-bolder blog_title pb-3 m-0"
                                   t-out="first_latest_post.name"/>
                                <p class="display-6 fw-medium m-0 pb64" t-out="first_latest_post.teaser"/>
                            </div>
                            <div class="date_more p-0 d-flex flex-row align-items-center justify-content-between">
                                <time t-if="first_latest_post.post_date"
                                      class="display-6 fw-medium m-0 o_animate o_anim_slide_in  o_anim_from_right o_delay_250"
                                      t-out="first_latest_post.create_date.strftime('%d %B %Y')"/>
                                <a t-attf-href="/blog/#{slug(first_latest_post.blog_id)}/#{slug(first_latest_post)}"
                                   class="btn btn-link d-flex flex-row gap-2 align-items-center text-black o_animate o_anim_slide_in  o_anim_from_right o_delay_250">
                                    More
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                         fill="none">
                                        <path d="M13.5 19.5L21 12M21 12L13.5 4.5M21 12H3" stroke="#0F172A"
                                              stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="pt120 d-grid lg:grid-cols-3 md:grid-cols-2 grid-cols-1 gap-4">
                        <t t-foreach="last_three_posts" t-as="post">
                            <div class="latest_post o_animate o_anim_bounce_in">
                                <a class="featured_post_img" t-attf-href="/blog/#{slug(post.blog_id)}/#{slug(post)}">
                                    <t t-call="website.record_cover">
                                        <t t-set="_record" t-value="post"/>
                                        <t
                                                t-set="additional_classes"
                                                t-valuef="o_not_editable h174 rounded-4"
                                        />
                                    </t>
                                </a>
                                <a t-attf-href="/blog/#{slug(post.blog_id)}/#{slug(post)}"
                                   class="text-black d-flex display-5 fw-bold blog_title pt40  overflow-text"
                                   t-out="post.name"/>
                                <p class="display-6 fw-medium overflow-text blog_desc pt-4"
                                   t-out="post.teaser"/>
                                <div class="date_more p-0 pt64 d-flex flex-row align-items-center justify-content-between">
                                    <time t-if="post.post_date" class="fs-6 fw-medium m-0"
                                          t-out="post.create_date.strftime('%d %B %Y')"/>
                                    <a t-attf-href="/blog/#{slug(post.blog_id)}/#{slug(post)}"
                                       class="btn btn-link fs-6 d-flex flex-row gap-2 align-items-center text-black">
                                        More
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24"
                                             fill="none">
                                            <path d="M13.5 19.5L21 12M21 12L13.5 4.5M21 12H3" stroke="#0F172A"
                                                  stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        </t>
                    </div>
                </div>
            </section>
        </xpath>
    </template>
    <!-- Blog post card loop -->
    <template id="custom_blog_post" inherit_id="website_blog.posts_loop">
        <xpath expr="//t[@t-if='state_info']" position="before">
            <h2 class="pb64 pt144">All News</h2>
        </xpath>
        <xpath expr="//article[@name='blog_post']" position="replace">
            <article
                    t-attf-class="latest_post o_wblog_post position-relative #{'card h-100' if opt_blog_cards_design else ''} o_animate o_anim_fade_in  o_anim_from_bottom"
                    name="blog_post">
                <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}">
                    <t t-call="website.record_cover">
                        <t t-set="_record" t-value="blog_post"/>
                        <t
                                t-set="additional_classes"
                                t-valuef="o_not_editable h174 rounded-4"
                        />
                    </t>
                </a>
                <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}"
                   class="text-black d-flex display-5 text-black fw-bold blog_title pt40 pb-4 overflow-text"
                   t-out="blog_post.name"/>
                <div class="date_more pt-4 d-flex flex-row align-items-center justify-content-between">
                    <time t-if="blog_post.post_date" class="fs-6 fw-medium m-0"
                          t-out="blog_post.create_date.strftime('%d %B %Y')"/>
                    <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}"
                       class="text-black d-flex btn btn-link fs-6 d-flex flex-row gap-2 align-items-center text-black">
                        More
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                             fill="none">
                            <path d="M13.5 19.5L21 12M21 12L13.5 4.5M21 12H3" stroke="#0F172A"
                                  stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </div>
            </article>
        </xpath>
    </template>

    <!-- Pager override -->
    <template id="custom_portel_indoqat" inherit_id="portal.pager">
        <xpath expr="//ul" position="replace">
            <ul
                    t-if="pager['page_count'] > 1"
                    t-attf-class="#{ classname or '' } pagination pt-5 #{_classes} pagenations gap-2"
                    t-att-style="style or None"
            >
                <li t-attf-class="page-item #{'disabled' if pager['page']['num'] == 1 else ''}">
                    <a
                            t-att-href="pager['page_previous']['url'] if pager['page']['num'] != 1 else None"
                            t-attf-class="page-link #{extraLinkClass} #{'d-flex' if pager['page']['num'] != 1 else 'd-none'} bg-primary rounded-pill pager-item justify-content-center align-items-center"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="33" viewBox="0 0 32 33" fill="none">
                            <path d="M6 14.625L16 4.625M16 4.625L26 14.625M16 4.625V28.625"
                                  stroke="white" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>

                    </a>
                </li>

                <li t-attf-class="page-item #{'disabled' if pager['page']['num'] == pager['page_count'] else ''}">
                    <a
                            t-att-href="pager['page_next']['url'] if pager['page']['num'] != pager['page_count'] else None"
                            t-attf-class="page-link #{extraLinkClass} #{'d-flex' if pager['page']['num'] != pager['page_count'] else 'd-none'} bg-primary rounded-pill pager-item d-flex justify-content-center align-items-center"
                    >
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="33" viewBox="0 0 32 33" fill="none">
                            <path d="M26 18.625L16 28.625M16 28.625L6 18.625M16 28.625L16 4.625" stroke="white"
                                  stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                    </a>
                </li>
            </ul>
        </xpath>
    </template>

