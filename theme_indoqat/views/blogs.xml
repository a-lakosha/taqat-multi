        <xpath expr="//section[@id='o_wblog_post_main']" position="replace">
            <!-- Success / more tips posts -->
            <section id="alternative_blog_posts" class="py-5 mt-5" style="background: #f9fafb;">
                <div class="container pb-5">
                    <div class="row py-4">
                        <div class="d-flex flex-row justify-content-between align-items-center mb96">
                            <h4 class="fw-bold" style="font-size: 32px;">
                                Similar News
                            </h4>
                            <a t-attf-href="/blog/#{slug(blog_post.blog_id)}"
                               class="d-flex text-black flex-row gap-3 align-items-center">
                                More
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="25" viewBox="0 0 24 25"
                                     fill="none">
                                    <path d="M13.5 19.7188L21 12.2188M21 12.2188L13.5 4.71875M21 12.2188H3"
                                          stroke="#000" stroke-width="1.5" stroke-linecap="round"
                                          stroke-linejoin="round"/>
                                </svg>
                            </a>
                        </div>
                        <t t-set="alternative_post_ids"
                           t-value="request.env['blog.post'].search([('blog_id' , '=', blog_post.blog_id.id)], limit=3)"/>
                        <t t-if="alternative_post_ids">
                            <t t-foreach="alternative_post_ids" t-as="alternative_post_id">
                                <article
                                        t-attf-class="latest_post o_wblog_post position-relative #{'card h-100' if opt_blog_cards_design else ''} col-lg-4 box {{'opacity-50' if not alternative_post_id.is_published else ''}} justify-content-center align-items-center"
                                        name="blog_post">
                                    <a t-attf-href="/blog/#{slug(alternative_post_id.blog_id)}/#{slug(alternative_post_id)}">
                                        <t t-call="website.record_cover">
                                            <t t-set="_record" t-value="alternative_post_id"/>
                                            <t
                                                    t-set="additional_classes"
                                                    t-valuef="o_not_editable h174 rounded-4"
                                            />
                                        </t>
                                    </a>
                                    <a t-attf-href="/blog/#{slug(alternative_post_id.blog_id)}/#{slug(alternative_post_id)}"
                                       class="text-black d-flex display-5 text-black fw-bold blog_title pt40 pb-4 overflow-text"
                                       t-out="alternative_post_id.name"/>
                                    <div class="date_more pt-4 d-flex flex-row align-items-center justify-content-between">
                                        <time t-if="alternative_post_id.post_date" class="fs-6 fw-medium m-0"
                                              t-out="alternative_post_id.create_date.strftime('%d %B %Y')"/>
                                        <a t-attf-href="/blog/#{slug(alternative_post_id.blog_id)}/#{slug(alternative_post_id)}"
                                           class="text-black d-flex btn btn-link fs-6 d-flex flex-row gap-2 align-items-center text-black">
                                            More
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                 viewBox="0 0 24 24"
                                                 fill="none">
                                                <path d="M13.5 19.5L21 12M21 12L13.5 4.5M21 12H3" stroke="#0F172A"
                                                      stroke-width="1.5" stroke-linecap="round"
                                                      stroke-linejoin="round"/>
                                            </svg>
                                        </a>
                                    </div>
                                </article>

                            </t>
                        </t>
                        <t t-else="">
                            <h3 class="text-center py-3">No Similar News</h3>
                        </t>
                    </div>
                </div>
            </section>
        </xpath>
    </template>

    <!-- Replace blog post content tweaks -->
    <template id="replace_blog_post_content" inherit_id="website_blog.blog_post_content">
        <xpath expr="//t[@t-if='opt_blog_post_breadcrumb and not opt_blog_post_regular_cover']" position="replace">
            <t t-set="var" t-value="0"/>
        </xpath>
        <xpath expr="//div[@t-field='blog_post.content']" position="replace">
            <p t-field="blog_post.content"/>
        </xpath>
        <xpath expr="//div[@t-if='len(blogs) > 1 or len(blog_post.tag_ids) > 0']" position="replace">
            <t t-set="var" t-value="0"/>
        </xpath>
    </template>

    <!-- Next post / success template social + author -->
    <template id="alternative_posts_template" inherit_id="website_blog.opt_blog_post_read_next">
        <xpath expr="//div[@t-if='next_post']" position="replace"/>
    </template>
</odoo>