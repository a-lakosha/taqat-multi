<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="inherit_page_jobs" inherit_id="website_hr_recruitment.index">
        <xpath expr="//t[@t-call='website.layout']" position="replace">
            <t t-call="website.layout">
                <section class="join_indoqat_team pt56 pb80">
                    <div class="container pb-lg-5 pt-lg-5">
                        <div class="row px-lg-4 align-items-center justify-content-between pt-lg-3">
                            <div class="col-lg-6">
                                <h1 class="display-2 fw-bolder mb32">Join Indoqat Team</h1>
                                <p class="display-5 fw-bolder mb24">
                                    Be part of the change… and build your future with us.
                                </p>
                                <p class="display-6 mb-4 mb-lg-5 pb-lg-2">At Indoqat, we’re not just looking for
                                    employees… we’re
                                    seeking
                                    passionate, creative and effective future leaders.
                                </p>
                                <a href="/contactus" rel="button"
                                   class="btn mb56 mb-lg-0 w-100 w-lg-fit btn-primary ps-4 pe-3 text-white fw-bold d-flex flex-row gap-2 rounded-4 justify-content-center align-items-center">
                                    Join Us
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                         fill="none">
                                        <path d="M9 19L16 12L9 5" stroke="white" stroke-width="2" stroke-linecap="round"
                                              stroke-linejoin="round"/>
                                    </svg>
                                </a>
                            </div>
                            <div class="col-lg-5 overflow-hidden">
                                <img src="/theme_indoqat/static/src/imgs/jobs_images/5af391b112ad628fbf88648cd57e94f4fbda3a06.jpg"
                                     alt="main_job_section_image"
                                     class="w-100 img-fluid rounded-4 main_job_section_image"/>
                            </div>
                        </div>
                    </div>
                </section>
                <section class="why_be_part pt80 pb80">
                    <div class="container py-lg-5">
                        <div class="row mb56 gap-2 gap-lg-0 align-items-center justify-content-between">
                            <div class="col-lg-5 mb-lg-4">
                                <h1 class="m-0 p-0">
                                    Why Be Part of Indoqat?
                                </h1>
                            </div>
                            <div class="col-lg-6 mb-lg-4">
                                <p class="display-5 m-0 p-0">
                                    We thrive in a flexible, empowering, and collaborative environment where ideas are
                                    respected and ambitions are embraced.
                                </p>
                            </div>
                        </div>
                        <div class="row gap-5 gap-lg-0 justify-content-lg-between justify-content-evenly">
                            <div class="col-lg-5 jobs_image">
                                <img src="/theme_indoqat/static/src/imgs/jobs_images/Rectangle_15.png"
                                     alt="main_job_section_image"
                                     class="w-100 img-fluid rounded-4 main_job_section_image"/>
                            </div>
                            <div class="col-lg-7">
                                <div class="d-flex flex-wrap justify-content-between min-h-600">
                                    <div class="row mb-xl-5 pb-lg-5 justify-content-between h-fit">
                                        <div class="why_item col-lg-5 mb-4 mb-lg-0 border-bottom">
                                            <h5 class="display-5 fw-bolder mb-3">
                                                ✅ A Growth-Oriented, Supportive Workplace
                                            </h5>
                                            <p class="mb32">We create a culture that nurtures development and
                                                professional
                                                advancement.
                                            </p>
                                        </div>
                                        <div class="why_item col-lg-6 mb-4 mb-lg-0 border-bottom">
                                            <h5 class="display-5 fw-bolder mb-3">
                                                ✅ Purpose-Driven Projects with Lasting Impact
                                            </h5>
                                            <p class="mb32">At Indoqat, every project is built to drive real change, as
                                                your
                                                work will directly contribute to meaningful community development.
                                            </p>
                                        </div>
                                    </div>
                                    <div class="row justify-content-between h-fit">
                                        <div class="why_item col-lg-5 mb-4 mb-lg-0 border-bottom">
                                            <h5 class="display-5 fw-bolder mb-3">
                                                ✅ Ongoing Learning &amp; Development Opportunities
                                            </h5>
                                            <p class="mb32">We invest in our people through continuous training and
                                                skill-building to keep them ahead of the curve.
                                            </p>
                                        </div>
                                        <div class="why_item col-lg-6 mb-4 mb-lg-0 border-bottom">
                                            <h5 class="display-5 fw-bolder mb-3">
                                                ✅ A Culture of Transparency and Teamwork
                                            </h5>
                                            <p class="mb32">We promote trust and openness within our team, believing
                                                that
                                                true success comes through collaboration and knowledge-sharing.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
                <section id="home_job" class="o_cc pt80 o_cc2 pb64">
                    <form action="" class="pt-lg-5">
                        <div class="container pt-lg-5">
                            <div class="content py-4">
                                <h2 class="fw-bolder pb-1 m-0">Search among Available Jobs</h2>
                                <p class="pb32">
                                    <t t-esc="len(jobs)"/>
                                    Jobs
                                </p>
                            </div>
                            <div
                                    class="row py-4 o_cc o_cc3 align-items-end rounded-4 filters_jobs"
                            >
                                <div class="col-lg-3">
                                    <form
                                            id="jobsForm"
                                            method="get"
                                            class="o_searchbar_form rounded-4 w-fit s_searchbar_input me-auto w-100 flex-grow-1"
                                    >
                                        <div role="search"
                                             class="input-group d-flex gap-2 w-100 search-query rounded-4 bg-white w-100 form-control oe_search_box border-0 text-bg-light">
                                            <i class="bi bi-search"/>
                                            <input
                                                    id="unput_jebs_search"
                                                    type="search"
                                                    name="search"
                                                    class="all-unset "
                                                    placeholder="Vacancy"
                                                    t-att-value="search"
                                                    autocomplete="off"
                                            />
                                        </div>
                                        <input
                                                name="order"
                                                type="hidden"
                                                class="o_search_order_by rounded-5"
                                                t-att-value="order_by if order_by else 'name asc'"
                                        />
                                    </form>
                                </div>
                                <!--  -->
                                <div
                                        t-attf-class="mt-3 mt-lg-0 col-lg-3 dropdown w-100 w-md-auto flex-fill"
                                >
                                    <label class="pb-3">Sector</label>
                                    <button
                                            type="button"
                                            class="input-group align-self-end d-flex gap-2 w-100 search-query rounded-4 bg-white w-100 form-control oe_search_box border-0 text-bg-light"
                                            data-bs-toggle="dropdown"
                                            id="departmentsDropdown"
                                    >
                                        <div
                                                class="d-flex w-100 align-items-center justify-content-between"
                                        >
                                            <div>
                                                <span t-if="department_id" t-field="department_id.name"/>
                                                <span t-elif="is_other_department">Others</span>
                                                <span t-else="">All</span>
                                            </div>

                                            <svg
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    xmlns="http://www.w3.org/2000/svg"
                                            >
                                                <path
                                                        d="M19 9L12 16L5 9"
                                                        stroke="#0A0A0A"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                />
                                            </svg>
                                        </div>
                                    </button>
                                    <div
                                            class="dropdown-menu w-100 w-md-auto"
                                            aria-labelledby="departmentsDropdown"
                                    >
                                        <a
                                                t-attf-href="/jobs?all_departments=1#{non_department_params}"
                                                t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link#{'' if department_id or is_other_department else ' active'}"
                                        >
                                            All
                                            <span
                                                    t-attf-class="badge rounded-pill#{' bg-primary' if department_id or is_other_department else ' bg-light text-primary'} ms-2 px-2"
                                                    t-out="count_per_department.get('all', '0')"
                                            />
                                        </a>
                                        <t t-foreach="departments" t-as="department">
                                            <t t-if="department">
                                                <a
                                                        t-attf-href="/jobs?department_id=#{department.id}#{non_department_params}"
                                                        t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link #{' active' if department_id and department_id.id == department.id else ''}"
                                                >
                                                    <span t-field="department.name"/>
                                                    <span
                                                            t-attf-class="badge rounded-pill#{' bg-light text-primary' if department_id and department_id.id == department.id else ' bg-primary'} ms-2 px-2"
                                                            t-out="count_per_department.get(department, '0')"
                                                    />
                                                </a>
                                            </t>
                                            <t t-else="">
                                                <a
                                                        t-attf-href="/jobs?is_other_department=1#{non_department_params}"
                                                        t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link #{' active' if is_other_department else ''}"
                                                >
                                                    Others
                                                    <span
                                                            t-attf-class="badge rounded-pill#{' bg-light text-primary' if is_other_department else ' bg-primary'} ms-2 px-2"
                                                            t-out="count_per_department.get(None, '0')"
                                                    />
                                                </a>
                                            </t>
                                        </t>
                                    </div>
                                </div>
                                <div
                                        t-attf-class="mt-3 mt-lg-0 col-lg-4 dropdown w-100 w-md-auto me-lg-2 my-1 flex-fill"
                                >
                                    <label class="pb-3 d-block">Country</label>

                                    <button
                                            type="button"
                                            class="input-group align-self-end d-flex gap-2 w-100 search-query rounded-4 bg-white w-100 form-control oe_search_box border-0 text-bg-light"
                                            data-bs-toggle="dropdown"
                                            id="countriesDropdown"
                                    >
                                        <div
                                                class="d-flex w-100 justify-content-between align-items-center"
                                        >
                                            <div>
                                                <span t-if="country_id" t-field="country_id.name"/>
                                                <span t-elif="is_remote">Remote</span>
                                                <span t-else="">All</span>
                                            </div>

                                            <svg
                                                    width="24"
                                                    height="24"
                                                    viewBox="0 0 24 24"
                                                    fill="none"
                                                    xmlns="http://www.w3.org/2000/svg"
                                            >
                                                <path
                                                        d="M19 9L12 16L5 9"
                                                        stroke="#0A0A0A"
                                                        stroke-width="2"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                />
                                            </svg>
                                        </div>
                                    </button>
                                    <div
                                            class="dropdown-menu w-100 w-md-auto"
                                            aria-labelledby="countriesDropdown"
                                    >
                                        <a
                                                t-attf-href="/jobs?all_countries=1#{non_country_params}"
                                                t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link#{'' if country_id or is_remote else ' active'}"
                                        >
                                            All
                                            <span
                                                    t-attf-class="badge rounded-pill#{' bg-primary' if country_id or is_remote else ' bg-light text-primary'} ms-2 px-2"
                                                    t-out="count_per_country.get('all', '0')"
                                            />
                                        </a>
                                        <t t-foreach="countries" t-as="country">
                                            <t t-if="country">
                                                <a
                                                        t-attf-href="/jobs?country_id=#{country.id}#{non_country_params}"
                                                        t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link #{' active' if country_id and country_id.id == country.id else ''}"
                                                >
                                                    <span t-field="country.name"/>
                                                    <span
                                                            t-attf-class="badge rounded-pill#{' bg-light text-primary' if country_id and country_id.id == country.id else ' bg-primary'} ms-2 px-2"
                                                            t-out="count_per_country.get(country, '0')"
                                                    />
                                                </a>
                                            </t>
                                            <t t-else="">
                                                <a
                                                        t-attf-href="/jobs?is_remote=1#{current_department_param}#{current_employment_type_param}"
                                                        t-attf-class="dropdown-item d-flex align-items-center justify-content-between nav-link#{' active' if is_remote else ''}"
                                                >
                                                    Remote
                                                    <span
                                                            t-attf-class="badge rounded-pill#{' bg-light text-primary' if is_remote else ' bg-primary'} ms-2 px-2"
                                                            t-out="count_per_country.get(None, '0')"
                                                    />
                                                </a>
                                            </t>
                                        </t>
                                    </div>
                                </div>
                                <!--  -->
                                <div class="col-lg-2 mt-3 mt-lg-0">
                                    <button
                                            type="submit"
                                            aria-label="Search"
                                            title="Search"
                                            class="btn text-center btn-primary rounded-4 d-block w-100 mb-0 oe_search_button"
                                    >
                                        <div class="d-flex gap-2 align-items-center justify-content-center">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"
                                                 viewBox="0 0 25 25" fill="none">
                                                <path d="M21.5 21.2441L16.3033 16.0474M16.3033 16.0474C17.6605 14.6902 18.5 12.8152 18.5 10.7441C18.5 6.602 15.1421 3.24414 11 3.24414C6.85786 3.24414 3.5 6.602 3.5 10.7441C3.5 14.8863 6.85786 18.2441 11 18.2441C13.0711 18.2441 14.9461 17.4047 16.3033 16.0474Z"
                                                      stroke="white" stroke-width="1.5" stroke-linecap="round"
                                                      stroke-linejoin="round"/>
                                            </svg>
                                            <span t-if="search" class="oe_search_found fw-bold">
                                                <small>(
                                                    <t t-out="search_count or 0"/>
                                                    found )
                                                </small>
                                            </span>
                                            <span t-else="" class="fw-bold">Search</span>
                                        </div>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                    <div class="container">
                        <div class="row">
                            <t t-if="not jobs">
                                <div class="d-flex justify-content-center">
                                    <div
                                            class="alert w-fit px-3 alert-error align-items-center text-center"
                                    >
                                        <strong
                                                class="d-flex gap-3 align-items-center justify-content-center"
                                        >
                                            <i class="bi bi-search d-inline-flex rounded-5 text-primary"/>
                                            No jobs found.
                                            <a href="/jobs">Reset filters?</a>
                                        </strong
                                        >
                                    </div>
                                </div>
                            </t>
                            <t t-else="">
                                <t t-foreach="jobs" t-as="job">
                                    <div
                                            class="box mt-4 position-relative rounded-5 p-3 bg-white"
                                    >
                                        <p
                                                t-if="not job.website_published"
                                                class="rounded-3 bg-primary fw-bold unpublished text-white position-absolute top-0 p-2"
                                                style="
                        right: 0;
                      "
                                        >
                                            Unpublished
                                        </p>
                                        <div class="d-flex flex-column flex-lg-row align-items-lg-end justify-content-between">
                                            <div class="details d-flex flex-column gap-2">
                                                <h3 class="m-0 p-0" t-field="job.name"/>
                                                <div class="details-jobs d-flex gap-3 align-items-center">
                                                    <span t-field="job.address_id" class="m-0 p-0 text-muted"
                                                          t-if="job.address_id"
                                                          t-options='{"widget": "contact", "fields": ["city"], "no_tag_br": True, "null_text": "Remote", "no_marker": true}'/>
                                                    <p t-if="job.department_id" class="m-0 p-0 text-muted">|</p>
                                                    <t t-if="job.department_id">
                                                        <p class="m-0 p-0 text-muted" t-field="job.department_id.name"/>
                                                    </t>
                                                </div>
                                                <t t-if="job.date_jobs">
                                                    <time
                                                            class="m-0 p-0"
                                                            t-out="job.date_jobs.strftime('%b %d, %Y')"
                                                    />
                                                </t>
                                                <div
                                                        class="date d-flex flex-column flex-lg-row justify-content-between align-items-lg-center"
                                                >
                                                </div>
                                            </div>
                                            <a
                                                    t-attf-href="/jobs/#{ slug(job) }"
                                                    class="btn  align-self-end  d-flex flex-row gap-2 align-items-center justify-content-center w-100 w-lg-fit mt-lg-0 fw-bold btn-outline-primary job-btn"
                                            >Apply now
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                                     viewBox="0 0 24 24" fill="none">
                                                    <path d="M13.5 19.5L21 12M21 12L13.5 4.5M21 12H3"
                                                          stroke="#F13223" stroke-width="1.5" stroke-linecap="round"
                                                          stroke-linejoin="round"/>
                                                </svg>
                                            </a>
                                        </div>
                                    </div>
                                </t>
                            </t>
                        </div>
                        <div class="w-100 d-flex justify-content-center">
                            <t t-call="theme_indoqat.custom_portel_indoqat"/>
                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>

    <!--    Job Details-->
    <template id="details_jobs_ids" inherit_id="website_hr_recruitment.detail">
        <xpath expr="//t[@t-call='website.layout']" position="replace">
            <t t-call="website.layout">
                <section
                        style="max-width: 882px"
                        class="m-auto"
                        id="hero_section_details_ids"
                >
                    <div class="container">
                        <div class="row">
                            <div class="details pt120 pb40 border-bottom px-lg-0">
                                <div class="d-flex mb24 flex-row flex-wrap justify-content-between align-items-center">
                                    <h2 t-field="job.name"/>
                                    <a t-attf-href="/jobs/apply/#{slug(job)}"
                                       role="button"
                                       class="btn btn-primary d-lg-flex d-none flex-row align-items-center justify-content-center fw-bold gap-2"
                                       style="padding:15px 40px;"
                                    >
                                        Apply Now
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                             viewBox="0 0 24 24" fill="none">
                                            <path d="M9 19L16 12L9 5" stroke="white" stroke-width="2"
                                                  stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                    </a>
                                </div>
                                <div class="details-jobs d-flex gap-3">
                                    <span t-field="job.address_id" class="m-0 p-0 text-muted" t-if="job.address_id"
                                          t-options='{"widget": "contact", "fields": ["city"], "no_tag_br": True, "null_text": "Remote", "no_marker": true}'/>
                                    <p class="m-0 p-0 text-muted">|</p>
                                    <p class="m-0 p-0 text-muted" t-field="job.department_id.name"/>
                                </div>
                                <div
                                        class="date pt-2 mt-1 d-flex flex-column flex-lg-row justify-content-between align-items-lg-center"
                                >
                                    <t t-if="job.date_jobs">
                                        <time
                                                class="m-0 p-0 text-muted"
                                                t-out="job.date_jobs.strftime('%b %d, %Y')"
                                        />
                                    </t>
                                </div>
                                <a t-attf-href="/jobs/apply/#{slug(job)}"
                                   role="button"
                                   class="btn btn-primary d-flex d-lg-none w-fit mt24 flex-row align-items-center justify-content-center fw-bold gap-2"
                                   style="padding:15px 40px;"
                                >
                                    Apply Now
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                         viewBox="0 0 24 24" fill="none">
                                        <path d="M9 19L16 12L9 5" stroke="white" stroke-width="2"
                                              stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </a>
                            </div>

                            <div class="px-lg-0 pt48 border-lg-bottom " id="jobdescription">
                                <h3 class="display-5 fw-bolder mb16">Job description</h3>
                                <div t-field="job.website_description"/>
                                <a t-attf-href="/jobs/apply/#{slug(job)}"
                                   role="button"
                                   class="btn btn-primary mb144 mt48 d-flex w-lg-fit flex-row align-items-center justify-content-center fw-bold gap-2"
                                   style="padding:15px 40px;"
                                >
                                    Apply Now
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                         viewBox="0 0 24 24" fill="none">
                                        <path d="M9 19L16 12L9 5" stroke="white" stroke-width="2"
                                              stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                </a>
                            </div>

                        </div>
                    </div>
                </section>
            </t>
        </xpath>
    </template>

</odoo>